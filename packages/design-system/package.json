    "@stitches/react": "1.2.8"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/react": "18.3.2",
    "@types/react-dom": "18.3.0",
    "esbuild": "0.21.1",
    "jest": "29.7.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "ts-jest": "29.1.2",
    "typescript": "5.4.5"
  }
}
