{
  "name": "recontentapp",
  "license": "AGPL-3.0-only",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "pre-commit": "lint-staged",
    "lockfile:lint": "npx yarn-deduplicate --fail --list -s highest yarn.lock",
    "lockfile:fix": "npx yarn-deduplicate -s highest yarn.lock",
    "prepare": "husky",
    "prettier:lint": "prettier -c .",
    "prettier:fix": "prettier -w .",
    "openapi:generate": "openapi-kit generate -f ./openapi/private-api.yml -o ./packages/api/src/generated --types && openapi-kit generate -f ./openapi/private-api.yml -o ./packages/app/src/generated",
    "openapi:format": "openapi-format ./openapi/private-api.yml -o ./openapi/private-api.yml",
    "start:app": "yarn workspace app start",
    "start:api": "yarn workspace api start"
  },
  "devDependencies": {
    "eslint": "8.57.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "openapi-format": "1.16.1",
    "openapi-kit": "0.6.1",
    "prettier": "3.2.5"
  }
}
